<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical"
    tools:context="paradigm.shift.myautonote.AboutFragment"
    android:background="@color/textNoHighlight">

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"/>

    <paradigm.shift.myautonote.util.TypeWriter
        android:id="@+id/about_line1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/textHeaderColor"
        android:textSize="22sp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:visibility="gone"/>

    <paradigm.shift.myautonote.util.TypeWriter
        android:id="@+id/about_line2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/textHeaderColor"
        android:alpha="0.8"
        android:textSize="18sp"
        android:paddingStart="24dp"
        android:paddingEnd="12dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:visibility="gone"/>

    <paradigm.shift.myautonote.util.TypeWriter
        android:id="@+id/about_line3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_user_icon"
        android:textSize="14sp"
        android:paddingStart="30dp"
        android:paddingEnd="12dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:visibility="gone"/>
    <paradigm.shift.myautonote.util.TypeWriter
        android:id="@+id/about_line4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_user_icon"
        android:textSize="14sp"
        android:paddingStart="30dp"
        android:paddingEnd="12dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:visibility="gone"/>
    <paradigm.shift.myautonote.util.TypeWriter
        android:id="@+id/about_line5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_user_icon"
        android:textSize="14sp"
        android:paddingStart="30dp"
        android:paddingEnd="12dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:visibility="gone"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

</LinearLayout>
